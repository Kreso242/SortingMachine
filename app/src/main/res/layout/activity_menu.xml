<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:background="@color/white">
    <TextView
        android:id="@+id/menuText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sortiraj po kutijama"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">
    </TextView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ferit"
        android:layout_alignParentRight="true"
        >
    </ImageView>

    <RelativeLayout
        android:id="@+id/boxLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@+id/menuText"
        >

        <RelativeLayout
            android:id="@+id/containterOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:onClick="openBox1"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"></RelativeLayout>
            <ImageView
                android:id="@+id/downArrow1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/arrow_down"
                android:layout_marginLeft="30dp"
                android:onClick="showContentOfBox1"
                android:layout_marginTop="16dp"></ImageView>


            <RelativeLayout
                android:id="@+id/box1"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/containter_background"
                android:onClick="openBox1"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/containterImage1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/box"></ImageView>

                <TextView
                    android:id="@+id/containterName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/containterImage1"
                    android:text="Kutija 1"
                    android:textColor="@color/black"></TextView>

                <ImageView
                    android:id="@+id/cross1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="75dp"
                    android:layout_toRightOf="@+id/containterName1"
                    android:src="@mipmap/cross"
                    android:visibility="visible"></ImageView>

                <ImageView
                    android:id="@+id/check1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="75dp"
                    android:layout_toRightOf="@+id/containterName1"
                    android:src="@mipmap/check"
                    android:visibility="gone"></ImageView>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/content1"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/box1"
                android:layout_centerHorizontal="true"
                android:background="@drawable/containter_background"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/contentShape1"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Oblik:"
                    android:textColor="@color/black"></TextView>

                <TextView
                    android:id="@+id/contentColor1"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/contentShape1"
                    android:layout_marginBottom="10dp"
                    android:text="Boja:"
                    android:textColor="@color/black"></TextView>

                <TextView
                    android:id="@+id/contentWeight1"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/contentColor1"
                    android:layout_marginBottom="10dp"
                    android:text="Masa:"
                    android:textColor="@color/black"></TextView>

                <TextView
                    android:id="@+id/contentShape1_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@+id/contentShape1"
                    android:text="X"
                    android:textColor="@color/black"></TextView>

                <TextView
                    android:id="@+id/contentColor1_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/contentShape1_1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@+id/contentColor1"
                    android:text="X"
                    android:textColor="@color/black"></TextView>

                <TextView
                    android:id="@+id/contentWeight1_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/contentColor1_1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@+id/contentWeight1"
                    android:text="Xg - Xg"
                    android:textColor="@color/black"></TextView>
            </RelativeLayout>
        </RelativeLayout>



        <RelativeLayout
