                    android:layout_marginBottom="10dp"></TextView>

                <TextView
                    android:id="@+id/contentWeight2"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="Masa:"
                    android:textColor="@color/black"
                    android:layout_below="@id/contentColor2"
                    android:layout_marginBottom="10dp"></TextView>

                <TextView
                    android:id="@+id/contentShape2_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X"
                    android:textColor="@color/black"
                    android:layout_toRightOf="@+id/contentShape2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"></TextView>

                <TextView
                    android:id="@+id/contentColor2_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X"
                    android:textColor="@color/black"
                    android:layout_below="@+id/contentShape2_2"
                    android:layout_toRightOf="@+id/contentColor2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"></TextView>

                <TextView
                    android:id="@+id/contentWeight2_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xg - Xg"
                    android:textColor="@color/black"
                    android:layout_below="@id/contentColor2_2"
                    android:layout_toRightOf="@+id/contentWeight2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"></TextView>
            </RelativeLayout>
        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/containterThree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:onClick="openBox1"
