<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sorterapp">

    <uses-feature android:name="android.hardware.bluetooth" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/start_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/start_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".cBaseApplication">
        <activity android:name=".Bluetooth"></activity>
        <activity android:name=".Box3" />
        <activity android:name=".Box2" />
        <activity android:name=".Box1" />
        <activity android:name=".MenuActivity" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>